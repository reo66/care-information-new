  <div class="container">
    <%= link_to "Care Information", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <% if current_user.admin?%>
            <li><%= link_to "スタッフ一覧", users_path %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              メニュー <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "メイン", current_user %></li>
              <li><%= link_to "編集", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "ログアウト", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
          <% else %>
            <li><%= link_to "ログイン", login_path, class:"logo" %></li>
            <li><%= link_to  "アカウント作成", signup_path, class:"logo" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>