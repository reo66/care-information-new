<script>
// アレルギーが有なら内容記載のフォームを出す
  $('#allergy').hide();

  $('#allergy').ready(function(){
      var name = $('.allergy').val()
      if(name == '有'){
  $('#allergy').show();
    }
    else if(name == '無'){
  $('#allergy').hide();
    }
  });
</script>