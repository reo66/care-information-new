<% provide(:title, @care_user.name) %>
<h1>利用者情報</h1>
<div class="img">
  <% if @care_user.image? %>
    <img src='<%= @care_user.image %>' class="user-icon" alt="ユーザーアイコン">
  <% else %>
    <%= image_tag src='picture-3651039_1920.png', class: "user-icon", alt: "ユーザーアイコン" %>
  <% end %>
  <div class="row">
    <% if current_user.admin?%>
      <%= link_to "利用者一覧",care_users_path, class: "btn btn-sm btn-primary" %>
      <%= link_to  "新規作成", new_care_user_path, class: "btn btn-sm btn-primary" %>
      <%= link_to  "編集", edit_care_user_path, class: "btn btn-sm btn-primary" %>
      <%= link_to "削除", care_user_path(@care_user), method: :delete,data: { confirm: "削除してよろしいですか？" },class: "btn btn-sm btn-danger" %>
    <% else %>
    <div class="current_no_admin">
      <%= link_to "利用者一覧",care_users_path, class: "btn btn-sm btn-primary" %>
    </div>


    <% end %>
  </div>  
</div> 
<div class="tb">
