<% provide(:title, 'All Users') %>
<h1>スタッフ一覧</h1>

<div class="search">
  <%= search_form_for @q, url: users_search_path do |f| %>
    <%= f.search_field :name_or_department_cont, class: "form-control",placeholder: "スタッフ名" %><br>
    <div class="search1">
      <%= f.radio_button :department_cont, '本店' %>本店
      <%= f.radio_button :department_cont, '上高畑' %>上高畑
      <%= f.submit '検索', class: 'btnbtn-primary' %>
    </div>
  <% end %>
</div>


<div class="col-md-10 col-md-offset-1">
  <table class="table table-condensed table-hover" id="table-care_users">
    <thead>
      <tr>
        <th><%= User.human_attribute_name(:name) %></th>
        <th><%= User.human_attribute_name(:department) %></th>
      </tr>
    </thead>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.department %></td>
        <td>
          <div class="index_btn">
            <%= link_to  "編集", edit_user_path(user), class: "btn btn-sm btn-primary" %>
            <%= link_to "削除", user, method: :delete,data: { confirm: "削除してよろしいですか？" },class: "btn btn-sm btn-danger" %>
          </div>
        </td>
      </tr>
    <% end %>
  </table>
  <%= paginate (@users) %>
</div>
